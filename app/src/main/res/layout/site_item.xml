<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">



        <ImageView
            android:id="@+id/siteImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_videogame" />



        <TextView
            android:id="@+id/siteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/siteImage"
            android:text="Line 1"
            android:padding="3dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/siteRelevanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_below="@id/siteName"
            android:layout_toEndOf="@+id/siteImage"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Wiki Relevance:" />

        <TextView
            android:id="@+id/siteRelevance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_below="@id/siteName"
            android:layout_toEndOf="@+id/siteRelevanceLabel"
            android:textColor="@android:color/black"
            android:text="Line 2" />


        <TextView
            android:id="@+id/siteCountryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_below="@id/siteRelevance"
            android:layout_toEndOf="@+id/siteImage"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Country:" />

        <TextView
            android:id="@+id/siteCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_below="@id/siteRelevance"
            android:layout_toEndOf="@+id/siteCountryLabel"
            android:textColor="@android:color/black"
            android:text="Line 3" />


        <TextView
            android:id="@+id/siteCategoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_below="@+id/siteCountry"
            android:layout_toEndOf="@+id/siteImage"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Category:" />

        <TextView
            android:id="@+id/siteCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_below="@+id/siteCountry"
            android:layout_toEndOf="@+id/siteCategoryLabel"
            android:textColor="@android:color/black"
            android:text="Line 4" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>